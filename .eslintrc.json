{
    "env": {
        "browser": true,
        "es2021": true,
        "node": true
    },
    "extends": "airbnb-base",
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "rules": {
        "import/no-extraneous-dependencies": 0,
        "no-console": 0,
        "no-alert": 0,
        "no-underscore-dangle": 0,
        "no-restricted-globals": 0,
        "linebreak-style": 0,
        "class-methods-use-this": 0,
        "no-new": 0,
        "indent": ["error", 4],
        "semi": "error",
        "quotes": ["warn", "single"]
    },
    "overrides": [
        {
            "files": ["__tests__/**/*.test.js", "__tests__/**/*.js"],
            "rules": {
                "no-undef": "off",
                "import/prefer-default-export": "off"
            }
        }
    ]
}
